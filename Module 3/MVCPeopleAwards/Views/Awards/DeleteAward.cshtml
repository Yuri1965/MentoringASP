@model MVCPeopleAwards.Models.AwardViewModel

@* на общую верстку для списка Наград*@
@{
    Layout = "~/Views/Awards/PartialView/LayoutAwards.cshtml";
}

<h3>Вы хотите удалить запись?</h3>
<div>
    
    @* частичное представление для вывода информации о награде*@
    @Html.Partial("~/Views/Awards/PartialView/AwardInfo.cshtml", Model)

    @using (Html.BeginForm("SaveDeleteAward", "Awards", FormMethod.Post)) {
        @Html.AntiForgeryToken()

        @Html.HiddenFor(model => model.Id)

        <div class="form-actions no-color">
            @Html.ActionLink("Назад к списку", "Index", "Awards") |
            <input type="submit" value="Удалить" class="btn btn-default" />
        </div>
    }

</div>