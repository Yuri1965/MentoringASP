@model MVCPeopleAwards.Models.AwardsModelView

@{
    ViewBag.Title = "Справочник Награды";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Справочник Награды</h2>

<p>
    @Html.ActionLink("Добавить запись", "GetCreate")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayName(Model.GetDisplayFieldName("NameAward"))
        </th>
        <th>
            @Html.DisplayName(Model.GetDisplayFieldName("DescriptionAward"))
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.ListAwards) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NameAward)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DescriptionAward)
        </td>
        <td>
            @Html.ActionLink("Изменить", "GetEdit", new { id = item.Id }) |
            @Html.ActionLink("Показать", "GetDetails", new { id = item.Id }) |
            @Html.ActionLink("Удалить", "GetDelete", new { id = item.Id })
        </td>
    </tr>
}
</table>

