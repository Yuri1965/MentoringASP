@model MVCPeopleAwards.Models.PeopleViewModel

<div class="form-group">
    @Html.LabelFor(model => model.PhotoPeople, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @* Если находимся в режиме редактирования записи *@
        @if (Model.PhotoPeople != null && Model.Id > 0)
        {
            <input id="photo" name="photo" type="file" class="file"
                   accept="image/jpg, image/png, image/jpeg"
                   data-language="ru"
                   data-show-upload="false"
                   data-max-file-size="2048"
                   data-max-file-count="1"
                   data-preview-file-type="text"
                   data-initial-preview="<img width='150' height='150' class='file-preview-image' src='@Url.Action("GetPhotoPeople", "PeoplesAward", new { Model.Id })'/>" />
        }
        else
        {
            <input id="photo" name="photo" type="file" class="file"
                   accept="image/jpg, image/png, image/jpeg"
                   data-language="ru"
                   data-show-upload="false"
                   data-max-file-size="2048"
                   data-max-file-count="1"
                   data-preview-file-type="text" />
        }
    </div>
</div>
