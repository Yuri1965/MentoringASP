@using MVCPeopleAwards.Accounts.DAL.EntityModels
@model IEnumerable<ApplicationUser>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<div class="panel panel-primary">
    <div class="panel-heading">
        Учетные записи пользователей
    </div>
    <table class="table table-striped">
        <tr>
            <th>Имя</th>
            <th>Email</th>
        </tr>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="3" class="text-center">Нет ни одной учетной записи</td>
            </tr>
        }
        else
        {
            foreach (ApplicationUser user in Model)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>
                        @Html.ActionLink("Роли", "EditAccountRoles", "Admin", new { id = user.Id },
                            new { @class = "btn btn-primary btn-xs", style = "float: left; margin-right: 10px" })
                    </td>
                </tr>
            }
        }
    </table>
</div>
